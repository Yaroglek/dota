<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#82D700" android:endColor="#82D700"
                android:angle="270" />
            <stroke android:width="10dp" android:color="#137E36" />
            <corners android:radius="20dp" />
            <padding android:left="10dp" android:top="10dp"
                android:right="10dp" android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <gradient android:startColor="#B4C694" android:endColor="#B4C694" android:angle="270" />
            <stroke android:width="10dp" android:color="#4B8C62" />
            <corners android:radius="20dp" />
            <padding android:left="10dp" android:top="10dp"
                android:right="10dp" android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient android:startColor="#B7DA00" android:endColor="#B7DA00"
                android:angle="270" />
            <stroke android:width="10dp" android:color="#566D00" />
            <corners android:radius="20dp" />
            <padding android:left="10dp" android:top="10dp"
                android:right="10dp" android:bottom="10dp" />
        </shape>
    </item>
</selector>
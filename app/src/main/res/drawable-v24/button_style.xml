<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#5e0000" android:endColor="#5e0000"
                android:angle="270" />
            <stroke android:width="4dip" android:color="#4b0000" />
            <corners android:radius="2dp" />
            <padding android:left="10dp" android:top="10dp"
                android:right="10dp" android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <gradient android:startColor="#c70808" android:endColor="#c70808" android:angle="270" />
            <stroke android:width="4dip" android:color="#9e0606" />
            <corners android:radius="2dp" />
            <padding android:left="10dp" android:top="10dp"
                android:right="10dp" android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient android:startColor="#690000" android:endColor="#690000"
                android:angle="270" />
            <stroke android:width="4dip" android:color="#510000" />
            <corners android:radius="2dip" />
            <padding android:left="10dp" android:top="10dp"
                android:right="10dp" android:bottom="10dp" />
        </shape>
    </item>
</selector>